#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
	/* Enter your code here. Read input from STDIN. Print output to STDOUT */
	long int T, N, i, j, sum;
	long int fb[16];

	fb[0] = 1;
	fb[1] = 1;

	cin >> T;
	for (i = 0; i<T; i++) {
		sum = 0;
		cin >> N;
		j = 2;

		while (1) {
			fb[j] = fb[j - 2] + fb[j - 1];
			if (fb[j] >= N) break;
			if (fb[j] % 2 == 0) sum += fb[j];
			j++;
		}
		cout << sum << endl;
	}
	return 0;
}
